<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/homeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="24dp">

        <!-- ðŸŒ App Title -->
        <TextView
            android:id="@+id/appTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EcoTrackU"
            android:textColor="#00BCD4"
            android:textSize="36sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="4dp"
            android:gravity="center" />

        <!-- ðŸŒ¿ Subtitle -->
        <TextView
            android:id="@+id/appSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Eco Lifestyle Companion"
            android:textColor="#B2EBF2"
            android:textSize="16sp"
            android:layout_marginBottom="20dp"
            android:gravity="center" />

        <!-- ðŸŒŽ Earth Image -->
        <ImageView
            android:id="@+id/homeEarth"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/earth"
            android:layout_marginBottom="30dp"
            android:contentDescription="Earth image" />

        <!-- ðŸŸ© Dashboard Grid -->
        <GridLayout
            android:id="@+id/dashboardGrid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:alignmentMode="alignMargins"
            android:rowOrderPreserved="false"
            android:useDefaultMargins="true"
            android:layout_gravity="center">

            <!-- Eco Points -->
            <LinearLayout
                style="@style/DashboardCard">
                <ImageView
                    style="@style/DashboardIcon"
                    android:src="@drawable/ic_leaf" />
                <TextView
                    style="@style/DashboardText"
                    android:text="Eco Points" />
            </LinearLayout>

            <!-- Cycling Tracker -->
            <LinearLayout
                style="@style/DashboardCard">
                <ImageView
                    style="@style/DashboardIcon"
                    android:src="@drawable/ic_cycle" />
                <TextView
                    style="@style/DashboardText"
                    android:text="Cycling Tracker" />
            </LinearLayout>

            <!-- Walking Tracker -->
            <LinearLayout
                style="@style/DashboardCard">
                <ImageView
                    style="@style/DashboardIcon"
                    android:src="@drawable/ic_walk" />
                <TextView
                    style="@style/DashboardText"
                    android:text="Walking Tracker" />
            </LinearLayout>

            <!-- Leaderboard -->
            <LinearLayout
                android:id="@+id/leaderboardButton"
                style="@style/DashboardCard">
                <ImageView
                    style="@style/DashboardIcon"
                    android:src="@drawable/ic_leaderboard" />
                <TextView
                    style="@style/DashboardText"
                    android:text="Leaderboard" />
            </LinearLayout>

            <!-- Graphs -->
            <LinearLayout
                style="@style/DashboardCard">
                <ImageView
                    style="@style/DashboardIcon"
                    android:src="@drawable/ic_graph" />
                <TextView
                    style="@style/DashboardText"
                    android:text="Progress Graphs" />
            </LinearLayout>

            <!-- Shopping Center -->
            <LinearLayout
                style="@style/DashboardCard">
                <ImageView
                    style="@style/DashboardIcon"
                    android:src="@drawable/ic_shopping" />
                <TextView
                    style="@style/DashboardText"
                    android:text="Eco Shop" />
            </LinearLayout>
        </GridLayout>
    </LinearLayout>
</ScrollView>
