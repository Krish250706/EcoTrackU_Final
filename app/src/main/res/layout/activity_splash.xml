<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/splashRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:gravity="center"
    tools:context=".SplashActivity">

    <!-- Rotating Earth -->
    <ImageView
        android:id="@+id/earthImage"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:src="@drawable/earth1"
        android:layout_centerInParent="true"
        android:contentDescription="Rotating Earth" />

    <!-- App Name -->
    <TextView
        android:id="@+id/appName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EcoTrackU"
        android:textColor="#00BCD4"
        android:textSize="34sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-medium"
        android:layout_below="@id/earthImage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:alpha="0" />

    <!-- Tagline -->
    <TextView
        android:id="@+id/tagline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Track. Act. Impact."
        android:textColor="#B2EBF2"
        android:textSize="16sp"
        android:layout_below="@id/appName"
        android:layout_centerHorizontal="true"
        android:alpha="0"
        android:layout_marginTop="8dp" />

</RelativeLayout>
